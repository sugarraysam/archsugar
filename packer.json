{
  "variables": {
    "iso_mirror": "http://mirrors.mit.edu",
    "iso_release": "2020.10.01",
    "disk_size": "40960M",
    "cpus": "2",
    "ram_size": "4096"
  },
  "builders": [
    {
      "vm_name": "archsugar",
      "type": "qemu",
      "format": "qcow2",
      "iso_url": "{{user `iso_mirror` }}/archlinux/iso/{{user `iso_release`}}-x86_64.iso",
      "iso_checksum": "file:{{user `iso_mirror`}}/archlinux/iso/{{user `iso_release`}}/md5sums.txt",
      "disk_size": "5000M",
      "cpus": "{{user `cpus`}}",
      "ram_size": "{{user `ram_size`}}",
      "output_directory": "_build",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "accelerator": "kvm",
      "http_directory": "path/to/httpdir",
      "ssh_username": "root",
      "ssh_password": "s0m3password",
      "ssh_timeout": "20m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos6-ks.cfg<enter><wait>"
      ]
    }
  ]
}
